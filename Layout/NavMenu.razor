@inject IJSRuntime JS

<nav class="navbar navbar-expand-lg navbar-dark ft-navbar" aria-label="Primary">
    <div class="container">
        <a class="navbar-brand fw-semibold d-flex align-items-center gap-2" href="/">
            <img src="festive.png" alt="Festive Tech" width="28" height="28" class="rounded" />
            <span>Festive Tech Calendar 2025</span>
        </a>

        <button class="navbar-toggler" type="button" title="Toggle navigation" @onclick="ToggleNavMenu"
                aria-controls="primaryNav" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse @(collapseNavMenu ? string.Empty : "show")" id="primaryNav">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#about" @onclick="CloseNavMenu">About ℹ️</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#topics" @onclick="CloseNavMenu">Topics 🧠</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#schedule" @onclick="CloseNavMenu">Schedule 📅</a>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/speakers" @onclick="CloseNavMenu">Speakers 👥</NavLink>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#contribute" @onclick="CloseNavMenu">Contribute 🎤</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#donate" @onclick="CloseNavMenu">Donate 🎗️</a>
                </li>

                <li class="nav-item ms-lg-2">
                    <button type="button" class="btn btn-sm btn-outline-light ft-theme-toggle" @onclick="ToggleTheme" aria-label="Toggle light/dark mode">
                        <span class="ft-theme-toggle-label">Theme</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CloseNavMenu()
    {
        collapseNavMenu = true;
    }

    private async Task ToggleTheme()
    {
        await JS.InvokeVoidAsync("ftTheme.toggle");
    }
}
