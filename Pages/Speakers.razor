@page "/speakers"

<PageTitle>Speakers</PageTitle>

<section class="py-5">
    <div class="container">
        <div class="row align-items-end g-3 mb-4">
            <div class="col-12 col-lg-8">
                <h1 class="display-6 fw-semibold mb-2">Speakers</h1>
                <p class="text-body-secondary mb-0">
                    Examples of community speakers contributing videos and articles across Azure, AI, and Microsoft technologies.
                </p>
            </div>
            <div class="col-12 col-lg-4 text-lg-end">
                <a class="btn btn-outline-primary" href="/">Back to home</a>
            </div>
        </div>

        <div class="row g-3">
            @foreach (var speaker in SpeakersList)
            {
                <div class="col-12 col-md-6 col-lg-4" @key="speaker.SessionId">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-3">
                                <img class="ft-avatar rounded-circle" src="festive.png" alt="@speaker.Name" />
                                <div class="min-w-0">
                                    <div class="d-flex flex-wrap gap-2 align-items-center">
                                        <h2 class="h5 mb-0">@speaker.Name</h2>
                                        <span class="badge text-bg-secondary">Session @speaker.SessionId</span>
                                    </div>
                                    <div class="text-body-secondary">@speaker.Role</div>
                                </div>
                            </div>

                            <p class="mt-3 mb-0">@speaker.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

